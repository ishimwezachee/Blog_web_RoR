<% unless @post.comments.empty? %>
<ul class="border border-3 border-dark container p-2 my-5 bio">
  <% @post.comments.each do |comment| %>
  <li class="d-flex justify-content-between zebra p-2" >
    <div>
      <%= comment.author.name %>: <%= comment.text%>
    </div>
    <div>
      <% if can? :destroy, comment %>
      <%= button_to 'Delete Comment', "/posts/:post_id/comments/#{params[:id]}", method: :delete, params: { comment_id: comment.id}, class: "btn btn-danger mb-3" %>
      <% end %>
    </div>
  </li>
  <% end %>
</ul>
<%end%>
