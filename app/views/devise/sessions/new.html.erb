<h2 class="fs-4 p-3 border border-1 container mt-5 p-2 rounded-pill bio text-center">Log in</h2>
<div class="fs-4 p-3 border border-1 container mt-5 p-2 bio rounded-start">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control mb-4 rounded-pill" %>
  </div>
  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control mb-4 rounded-pill" %>
  </div>
  <% if devise_mapping.rememberable? %>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Log in", data: {disable_with: "Login..."}, class: "btn btn-warning my-3"%>
  </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>